{
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": ["es2019"],
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/db/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
